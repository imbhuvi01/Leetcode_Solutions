class Solution {
    public String mergeAlternately(String word1, String word2) {
        String word3 = "";
        int a = word1.length();
        int b = word2.length();
        
        for(int i=0;i<a||i<b;i++){
            if(i<a){
                word3 += word1.charAt(i);
                
            }
            if(i<b){
                word3 += word2.charAt(i);
            }
        }
        return word3;
    }
}
